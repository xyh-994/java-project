<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="#eeeeee"
    tools:context="com.v.administrator.calculator.MainActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#eeeeee"
       android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:layout_gravity="fill">
         <TextView
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_gravity="fill"
             android:text="0"
             android:background="#ffffff"
             android:id="@+id/tv_show"
             android:textSize="50dp"
             android:layout_marginBottom="1dp"
             />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:orientation="horizontal"
          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:orientation="vertical"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:orientation="horizontal">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:text="C"
                   android:id="@+id/btn_clear"
                   android:textSize="20dp"
                   android:textColor="#ff6d25"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="del"
                   android:id="@+id/btn_del"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="รท"
                   android:id="@+id/btn_except"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:orientation="horizontal">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="7"
                   android:id="@+id/btn_7"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="8"
                   android:id="@+id/btn_8"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="9"
                   android:id="@+id/btn_9"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:orientation="horizontal">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="4"
                   android:id="@+id/btn_4"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="5"
                   android:id="@+id/btn_5"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="6"
                   android:id="@+id/btn_6"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:orientation="horizontal">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="1"
                   android:id="@+id/btn_1"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="2"
                   android:id="@+id/btn_2"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:text="3"
                   android:id="@+id/btn_3"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="fill"
                android:orientation="horizontal">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="%"
                   android:id="@+id/btn_sign"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="0"
                   android:id="@+id/btn_0"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="fill"
                   android:background="@drawable/btn_other"
                   android:text="."
                   android:id="@+id/btn_point"
                   android:textSize="20dp"
                   android:textColor="#777777"
                   android:layout_marginLeft="1dp"
                   android:layout_marginTop="1dp"
                   android:layout_weight="1"/>
            </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="3"
             android:orientation="vertical"
             >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="@drawable/btn_other"
                android:text="ร"
                android:id="@+id/btn_ride"
                android:textSize="20dp"
                android:textColor="#777777"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4.62"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="@drawable/btn_other"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:text="-"
                android:id="@+id/btn_reduce"
                android:textSize="20dp"
                android:textColor="#777777"
                android:layout_weight="4.6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="@drawable/btn_other"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:text="+"
                android:id="@+id/btn_add"
                android:textSize="20dp"
                android:textColor="#777777"
                android:layout_weight="4.612"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="@drawable/btn_equal"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:text="="
                android:id="@+id/btn_equal"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_weight="3.44"/>
         </LinearLayout>
      </LinearLayout>
   </LinearLayout>
</RelativeLayout>
